

<h1>Messages - <%= @is_thread ? "Threads" : "Recents"%></h1>

<%= link_to !@is_thread ? "Threads" : "Recents", messages_path(view: !@is_thread ? "thread" : "recent") %>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Dest</th>
      <th>Is public</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.mparent_id ? "[R]" : "[T]"%> <%= message.content %></td>
        <td><%= message.author.name %></td>
        <td><%= message.dest.name %></td>
        <td><%= message.is_public %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_message_path %>
