<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Fullname</th>
      <th>Is admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.fullname %></td>
        <td><%= user.is_admin %></td>
        <td><%= link_to 'Show', user_path(user,:html) %></td>
        <td><%= link_to 'Edit', edit_user_path(user, :html) %></td>
        <td><%= link_to 'Destroy', user_path(user,:html), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path(:html) %>
