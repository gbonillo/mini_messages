<h1>Log in</h1>

<%= form_with(url: login_path(:html), scope: :session, local: true) do |f| %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Log in", class: "btn" %>
<% end %>

<p>New user? <%= link_to "Sign up now!", new_user_path(:html) %></p>